<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.PoS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.PoS"
    xmlns:views="clr-namespace:Maui.PoS.Views"
    Title="Maui.PoS">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Administration"
        ContentTemplate="{DataTemplate views:AdminMainView}"
        Route="AdminMenu" />
    <ShellContent
        Title="Menu Item Details"
        ContentTemplate="{DataTemplate views:ItemDetailView}"
        Route="ItemDetails" />
</Shell>
